<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:TheKingsTable.Controls">
  <Design.PreviewWith>
    <c:BitEditor />
  </Design.PreviewWith>

  <Style Selector="c|BitEditor">
    <Setter Property="Template">
      <ControlTemplate>
        <ListBox Name="PART_BitList">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <CheckBox/>
                <TextBlock Text="TEMP"/>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
